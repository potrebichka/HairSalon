@{
    Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Appointment>

<div id="horizontalMenu">
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Show all stylists","Index", "Stylists")</li>   
        <li>@Html.ActionLink("Back to stylist", "Details", "Stylists", new {id = ViewBag.Stylist.StylistId})</li>
        <li>@Html.ActionLink("Create an appointment", "Create", new {id = ViewBag.Stylist.StylistId})</li>
    </ul>
</div>

<div class="container contentBox">
    <h2>Appointments of stylist @ViewBag.Stylist.Name:</h2>
    @if (Model.Count == 0)
    {
        <h3>No appointments have been added yet.</h3>
    }
    @foreach (Appointment appointment in Model)
    {
        <hr/>
        <h3><li>@Html.ActionLink($"{appointment.Client.Name}: {appointment.Time}","Details", new {id = appointment.AppointmentId})</li></h3>
    }
</div>