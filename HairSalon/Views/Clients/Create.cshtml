@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
<hr/>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextAreaFor(model => model.Description)
    <br>
    <input type="hidden" value="@ViewBag.Id" name="StylistId"/>
    <input type="submit" value="Add a new client" class="btn btn-primary" />
}
<hr/>
<h4>@Html.ActionLink("Show all clients", "Index", new {id = ViewBag.Id})</h4>
<h4>@Html.ActionLink("Back to stylist", "Details", "Stylists", new {id = ViewBag.Id})</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>