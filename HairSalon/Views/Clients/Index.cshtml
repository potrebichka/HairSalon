@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div id="horizontalMenu">
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Back to stylist", "Details", "Stylists", new {id = ViewBag.Id})</li>   
        <li>@Html.ActionLink("Create a new client", "Create", new {id = ViewBag.Id})</li>
    </ul>
</div>

<div class="container contentBox">
    <h1>Clients of stylist: @ViewBag.Name</h1>

    @if (Model.Count == 0)
    {
        <h3>No clients have been added yet.</h3>
    }

    @foreach (Client client in Model)
    {
        <h3><li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId} )</li></h3>
    }
</div>

