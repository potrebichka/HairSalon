@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients of stylist @ViewBag.Name</h1>

@if (Model.Count == 0)
{
    <h3>No clients have been added yet.</h3>
}

@foreach (Client client in Model)
{
    <h3><li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId} )</li></h3>
}

<h4>@Html.ActionLink("Create a new client", "Create", new {id = ViewBag.Id})</h4>
<h4>@Html.ActionLink("Back to stylist", "Details", "Stylists", new {id = ViewBag.Id})</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>