@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div id="horizontalMenu">
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Create a new stylist", "Create")</li>   
    </ul>
</div>
        

<div class="contentBox">
    <h1>List of stylists</h1>

    @if (Model.Count == 0)
    {
        <h3>No stylists have been added yet.</h3>
    }

    @foreach (Stylist stylist in Model)
    {
        <h3><li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId} )</li></h3>
    }


</div>
